<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE PUBLIC>
<!--
   说明：此文件用于配置系统中需要使用的数据源，在同一个系统中可以同时配置多个数据源。
                   缺省数据源必须使用default属性进行说明。
    注意：系统中的所有数据源都使用C3P0实现，另外每一个datasource都必须要指定id。
-->
<datasources default="huajiao">
	<datasource id="huajiao" >
		<property name="driver-name">com.mysql.jdbc.Driver</property>
		<property name="url">jdbc:mysql://39.108.120.224:3306/huajiao</property>
		<property name="user">huajiao</property>
		<property name="password">huajiao</property>
		<property name="initialPoolSize">1</property>
		<property name="minPoolSize">1</property>
		<property name="maxPoolSize">20</property>
		<property name="checkoutTimeout">60000</property>
		<property name="maxStatements">100</property>
		<property name="idleConnectionTestPeriod">3000</property>
		<property name="acquireIncrement">2</property>
		<property name="useUnicode">yes</property>
		<property name="characterEncoding">UTF-8</property>
	</datasource>
</datasources>
